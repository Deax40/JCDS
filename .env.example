# Base de données PostgreSQL hébergée (Supabase, Neon, Vercel Postgres, etc.)
# Exemple: postgresql://user:password@host:5432/database
DATABASE_URL=postgresql://...

# URL publique du site (pour Vercel, sera auto-détectée)
NEXT_PUBLIC_SITE_URL=https://votre-site.vercel.app

# NextAuth (pour l'authentification)
NEXTAUTH_URL=https://votre-site.vercel.app
NEXTAUTH_SECRET=votre-secret-aleatoire-genere

# SumUp API (pour les paiements)
SUMUP_API_KEY=votre-cle-api-sumup
SUMUP_MERCHANT_CODE=votre-code-marchand-sumup
NEXT_PUBLIC_SUMUP_MERCHANT_CODE=votre-code-marchand-sumup

# Commission de la plateforme (en pourcentage, par défaut 10%)
PLATFORM_COMMISSION=10

# Upload d'images (optionnel - Cloudinary, AWS S3, etc.)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
